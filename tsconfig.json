{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true, /* Generates corresponding '.d.ts' file. */
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}